# A2A World Platform - Environment Configuration Template
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql://a2a_user:a2a_password@localhost:5432/a2a_world
POSTGRES_SERVER=localhost
POSTGRES_USER=a2a_user
POSTGRES_PASSWORD=a2a_password
POSTGRES_DB=a2a_world
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# NATS Configuration (for agent messaging)
NATS_URL=nats://localhost:4222

# Consul Configuration (for service discovery)
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_URL=http://localhost:8500
CONSUL_DC=dc1

# API Configuration
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=10080
API_V1_STR=/api/v1

# CORS Configuration (comma-separated list of origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:8080,https://localhost:8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# LLM Configuration (Ollama local inference)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# File Storage Configuration
DATA_STORAGE_PATH=./data
MAX_FILE_SIZE_MB=100

# Agent System Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_HEARTBEAT_INTERVAL=30

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@a2aworld.ai

# Monitoring Configuration
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true

# Development Settings
ENVIRONMENT=development
DEBUG=true

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your-production-secret-key-64-characters-minimum
# BACKEND_CORS_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgresql://user:password@prod-db:5432/a2a_world